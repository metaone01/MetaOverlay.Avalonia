<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0-android</TargetFramework>
        <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
        <Nullable>enable</Nullable>
        <ApplicationId>com.CompanyName.MetaOverlay.Theme.Avalonia.Demo</ApplicationId>
        <ApplicationVersion>1</ApplicationVersion>
        <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
        <AndroidPackageFormat>apk</AndroidPackageFormat>
        <AndroidEnableProfiledAot>false</AndroidEnableProfiledAot>
    </PropertyGroup>

    <ItemGroup>
        <AndroidResource Include="Icon.png">
            <Link>Resources\drawable\Icon.png</Link>
        </AndroidResource>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia.Android" Version="11.2.3" />
        <PackageReference Include="Xamarin.AndroidX.Core.SplashScreen" Version="1.0.1.13" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\MetaOverlay.Theme.Avalonia.Demo\MetaOverlay.Theme.Avalonia.Demo.csproj"/>
    </ItemGroup>
</Project>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MetaOverlay.Theme.Avalonia.Demo.Pages.BorderDemo">
    <Grid RowDefinitions="*,*">
        <DockPanel Grid.Row="0">
            <Label DockPanel.Dock="Left" Theme="{StaticResource AlphaLabel}" Classes="Left" Content="Default Border" />
            <Border />
        </DockPanel>
        <DockPanel Grid.Row="1">
            <Label DockPanel.Dock="Left" Theme="{StaticResource AlphaLabel}" Classes="Left" Content="Overlay Border" />
            <Border Theme="{StaticResource OverlayBorder}" />
        </DockPanel>
    </Grid>
</UserControl>
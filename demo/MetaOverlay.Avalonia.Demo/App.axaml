    <Application.DataTemplates>
        <demo:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://MetaOverlay.Avalonia/Themes/Index.axaml" />
    </Application.Styles>
</Application>